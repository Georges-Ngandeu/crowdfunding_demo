{% extends 'home/base.html.twig' %}

{% block stylesheets %}
    <style>
        legend.col-form-label{
            font-size: 0.9rem;
            font-weight: 400;
        }

        #author_form_authorImage{
            min-width: 14rem;
            max-width: 100%;
            height: calc(2.25rem + 2px);
            margin: 0;
            opacity: 1;
            margin-left: 0.5rem;
            margin-top: 0.5rem;
        }

        label {
            font-weight: 400;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-title background-campaign">
        <div class="container">
            <h1>Changer mon mot de passe</h1>
        </div>
    </div><!-- .page-title -->

    <div class="container">
        <div class="main-content">
            <div class="form-login form-register">
                <h2>Changer mon mot de passe</h2>
                {{ form_start(form, {'attr': {'id': 'userForm'}}) }}

                <div class="my-custom-class-for-errors">
                    {{ form_errors(form) }}
                </div>

                {{ form_row(form.old_password) }}

                {{ form_row(form.password) }}

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}