{% block body %}
    <div class="page-title background-campaign">
        <div class="container">
            <h1>{{ subscription.getProjectId().getProjectName()}}</h1>
        </div>
    </div><!-- .page-title -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 main-content" style="margin-bottom: 5rem;">
                <div class="" style="background-color: #f5f6f6; padding: 36px 30px;">
                    <article class="post">
                        <div class="shop-detail-img">
                            <div id="owl-shop" class="shop-slider">
                                <div id="owl-campaign" class="campaign-slider">
                                    {% for key, image in subscription.getProjectId().getProjectImages()[subscription.getProjectId().getProjectName()] %}
                                        <div class="item"><img src="../../companies_documents/{{ package.getUrl(subscription.getProjectId().getProjectName())|formattedProjectName }}/{{ image }}" alt=""></div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <h3 style="margin-bottom: 1rem; margin-top: 1rem;">Description courte du projet</h3>
                        <p>
                            {{ subscription.getProjectId().getProjectShortdescription() }}
                        </p>
                    </article>
                </div>
            </div><!-- .main-content -->
            <div class="col-lg-4 sidebar">
                <aside class="widget widget-action">
                    <div class="widget-content">
                        <div>
                            <form id="loginForm" class="clearfix">
                                {#<label>Numéro de téléphone au format international</label>#}
                                {#<div class="input-group mb-4">#}
                                    {#<div class="input-group-addon">237</div>#}
