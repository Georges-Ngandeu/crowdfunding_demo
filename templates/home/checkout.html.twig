{% extends 'home/base.html.twig' %}

 {% block stylesheets %}
     <style>
         #bank_receipt_form_bank_receipt{
             min-width: 14rem;
             max-width: 100%;
             height: calc(2.25rem + 2px);
             margin: 0;
             opacity: 1;
             margin-left: 0.5rem;
             margin-top: 0.5rem;
         }

         a.bank{
             color: #00a6eb;
             text-decoration: none;
